{
  "name": "@js-toolkit/styled-components",
  "version": "1.11.0",
  "description": "Styled react components powered by JSS via @material-ui/styles",
  "author": "VZH",
  "license": "MIT",
  "main": "./index.js",
  "types": "./index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/js-toolkit/styled-components"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "copy:configs": "copyfiles package.json .npmignore README.md LICENSE ./dist/",
    "minify": "node-utils-minify --replace ./dist",
    "build": "npm run clean && tsc --build ./tsconfig.json && npm run minify",
    "build-to-tutoron": "tsc --project ./tsconfig.json --outDir '../../../tutoron/node_modules/@js-toolkit/styled-components'",
    "build-to-player": "tsc --build ./tsconfig.json && npm run minify && copyfiles -e './dist/*(package.json|README.md|LICENSE)' -u 1 './dist/**/*' '../../../player/modules/styled-components'",
    "patch-publish": "yarn run build && yarn version --patch && yarn run copy:configs && npm publish ./dist/ && git push origin master --follow-tags",
    "minor-publish": "yarn run build && yarn version --minor && yarn run copy:configs && npm publish ./dist/ && git push origin master --follow-tags"
  },
  "devDependencies": {
    "@js-toolkit/configs": "^3.84.4",
    "@js-toolkit/node-utils": "^1.1.4",
    "@js-toolkit/react-hooks": "^1.43.1",
    "@js-toolkit/utils": "^1.42.1",
    "@js-toolkit/web-utils": "^1.32.2",
    "@mui/material": "^5.6.0",
    "@mui/styles": "^5.6.0",
    "@types/react": "18.0.1",
    "@types/react-modal": "^3.13.1",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "jss": "^10.9.0",
    "jss-plugin-camel-case": "^10.9.0",
    "jss-plugin-compose": "^10.9.0",
    "jss-plugin-default-unit": "^10.9.0",
    "jss-plugin-expand": "^10.9.0",
    "jss-plugin-extend": "^10.9.0",
    "jss-plugin-global": "^10.9.0",
    "jss-plugin-nested": "^10.9.0",
    "jss-plugin-props-sort": "^10.9.0",
    "jss-plugin-rule-value-function": "^10.9.0",
    "jss-plugin-rule-value-observable": "^10.9.0",
    "jss-plugin-template": "^10.9.0",
    "jss-plugin-vendor-prefixer": "^10.9.0",
    "prettier": "^2.6.2",
    "react": "^18.0.0",
    "react-modal": "^3.14.4",
    "react-outside-click-listener": "^1.5.1",
    "react-use": "^17.3.2",
    "reflexy": "^3.41.7",
    "rimraf": "^3.0.2",
    "terser": "^5.12.1",
    "typescript": "^4.6.3",
    "yargs": "^17.4.1"
  },
  "peerDependencies": {
    "react": ">= 16.8"
  }
}
